@model IEnumerable<KRONOS.Models.clm_contactos>

@{
    ViewBag.Title = "LT";
}
<br />
<p><h8>LISTA TELEFÓNICA</h8> <h5>(apenas não clientes)</h5></p>
@using (Html.BeginForm())
{

    @Html.TextBox("stringfiltro")
    <input type="submit" value="FILTRAR" />
}

<p>
    @Html.ActionLink("NOVO REGISTO", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telemovel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.morada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.anotacoes1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.anotacoes2)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telemovel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.morada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.anotacoes1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.anotacoes2)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.ID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
