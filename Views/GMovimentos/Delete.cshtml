@model PKX.Models.Movimento

@{
    ViewData["Title"] = "Eliminar Movimento";
}

<h2>Eliminar Movimento</h2>

<h3>Tem a certeza de que deseja eliminar este movimento?</h3>
<div>
    <h4>Movimento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descritivo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descritivo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClienteId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClienteId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Marcador)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Marcador)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
